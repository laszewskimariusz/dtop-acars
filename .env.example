# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For PostgreSQL use format: postgresql://username:password@hostname:port/database_name
# Example for local PostgreSQL:
# DATABASE_URL=postgresql://dtop_user:your_password@localhost:5432/dtop_acars
# 
# Example for production PostgreSQL (like Railway, Supabase, etc.):
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name?sslmode=require
#
# For local development with SQLite, leave DATABASE_URL commented out
# DATABASE_URL=sqlite:///db.sqlite3

# GitHub Personal Access Token (for deployment)
GH_PAT=your-github-token-here

# Other environment variables can be added here
